---
layout: compress
---
[
  {% assign all_content = site.pages | concat: site.posts %}
  {% for post in all_content %}
    {% if
      post.url != "/offline/" and 
      post.url != "/newsletter/confirm/" and 
      post.url != "/newsletter/thanks/" and 
      post.url != "/photos/" and 
      post.url != "/404.html" and 
      post.url != "/" and
      post.url != "/sw.js"
    %}
      {
        "title"    : "{{ post.title | escape }}",
        "url"      : "{{ site.baseurl }}{{ post.url }}",
        "tags"     : "{{ post.tags | join: ', ' }}",
        "date"     : "{{ post.date }}"
      } {% unless forloop.last %},{% endunless %}
    {% endif %}
  {% endfor %}
]